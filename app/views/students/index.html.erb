<p id="notice"><%= notice %></p>

<h1>Students</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Down payment</th>
      <th>Financially cleared</th>
      <th>Enrollment agreement</th>
      <th>Transcript</th>
      <th>Yes we code</th>
      <th>Cohort</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.first_name %></td>
        <td><%= student.last_name %></td>
        <td><%= student.email %></td>
        <td><%= student.down_payment %></td>
        <td><%= student.financially_cleared %></td>
        <td><%= student.enrollment_agreement %></td>
        <td><%= student.transcript %></td>
        <td><%= student.yes_we_code %></td>
        <td><%= student.cohort %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

