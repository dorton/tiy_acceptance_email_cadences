<p id="notice"><%= notice %></p>

<h1>Code Challenges</h1>

<table>
  <thead>
    <tr>
      <th>Newline url</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @code_challenges.each do |code_challenge| %>
      <tr>
        <td><%= code_challenge.newline_url %></td>
        <td><%= code_challenge.description %></td>
        <td><%= link_to 'Show', code_challenge %></td>
        <td><%= link_to 'Edit', edit_code_challenge_path(code_challenge) %></td>
        <td><%= link_to 'Destroy', code_challenge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Code Challenge', new_code_challenge_path %>
