<%= simple_form_for(@announcement) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :date, as: 'string', label: 'Event Date', input_html: { class: 'datepicker' } %>
    <%= f.input :title %>
    <%= f.input :location %>
    <%= f.association :cohort, label_method: :start_date %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
